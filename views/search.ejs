<%- include("particals/head") %>
<div class="card mt-3 shadow">
    <div class="card-header">
        <i class="far fa-address-card"></i> ระบบสมัครชุมนุมออนไลน์ ( พบทั้งหมด <span id="clubCount">loading</span>
        ชุมนุม )
    </div>
    <div class="card-body text-center">
        <p class="text-left">คุณกำลังค้นหา: <span id="search"><%= search %></span></p>
        <table class="table table-sm table-hover">
            <thead>
                <tr>
                    <th class="col-1">#</th>
                    <th class="col-3">ชื่อชุมนุม</th>
                    <th class="col-2">ครูผู้สอน</th>
                    <th class="col-2">จำนวนที่รับ</th>
                    <th class="col-2">จำนวนผู้สมัคร</th>
                    <th class="col-2">ตัวเลือก</th>
                </tr>
            </thead>
            <tbody id="ClubRows">
            </tbody>
        </table>
    </div>
</div>

<div id="modalRows"></div>

<script>
    function updateRows() {
        $.ajax({
            url: "/api/v1/clubs/search/"+$("#search").html(),
            dataType: "json",
            success: json => {
                $("#clubCount").html(json.data.length)
                $("#ClubRows").html("")
                $("#modalRows").html("")
                for (let obj of json.data) {
                    $("#ClubRows").append(`
                    <tr id="Table${obj.id}">
                        <td class="align-middle">${obj.id}</td>
                        <td class="align-middle">${obj.name}</td>
                        <td class="align-middle">${obj.firstname_teacher} ${obj.lastname_teacher}</td>
                        <td class="align-middle">${obj.max}</td>
                        <td class="align-middle">${obj["members"].length}</td>
                        <td class="align-middle"><button class="btn btn-dark" data-toggle="modal" data-target="#Dialog${obj.id}"><i class="fas fa-search"></i> ดูเพิ่มเติม</button></td>
                    </tr>
                    `)
                    $("#modalRows").append(`
                    <div class="modal fade" id="Dialog${obj.id}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">ชุมนุม: ${obj.name}</h5>
                                    <button class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <h6>ครูผู้สอน : ${obj.firstname_teacher} ${obj.lastname_teacher}</h6>
                                    <h6>จำนวนที่รับได้/จำนวนผู้สมัคร : ${obj.max}/${obj["members"].length}</h6>
                                    <h6>สถานะการรับสมัคร : ${obj.min >= obj.max ? "ปิดรับสมัคร" : "เปิดรับสมัคร"}</h6>
                                    <p class="text-center m-0 p-0 mb-2">(พบนักเรียน <span id="MemberCount${obj.id}">loading</span> คน ในชุมนุม)</p>
                                    <table class="table table-sm table-hover my-2 text-center">
                                        <thead>
                                            <tr>
                                                <th class="col-1">#</th>
                                                <th class="col-3">ชื่อนักเรียน</th>
                                                <th class="col-2">ชั้น</th>
                                            </tr>
                                        </thead>
                                        <tbody id="MemberRows${obj.id}">
                                        </tbody>
                                    </table>
                                    <button class="btn btn-dark w-100" data-dismiss="modal" onclick="checkId(${obj.id})"><i class="fas fa-sign-in-alt"></i> สมัคร</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    `)
                    $(`#MemberCount${obj.id}`).html(`${obj["members"].length || 0}`)
                    $(`#MemberRows${obj.id}`).html("")
                    if (obj["members"].length <= 0) {
                        $(`#MemberRows${obj.id}`).append(`<tr><td colspan="4" class="table-danger" align="center"><i class="fa fa-times"></i> ไม่พบนักเรียน </td></tr>`)
                    }
                    for (let member of obj["members"]) {
                        $(`#MemberRows${obj.id}`).append(`
                        <tr>
                            <td class="align-middle">${member.id}</td>
                            <td class="align-middle">${member.firstname} ${member.lastname}</td>
                            <td class="align-middle">${member.class}</td>
                        </tr>
                        `)
                    }
                }
            }
        })
    }


    updateRows()

</script>

<%- include("particals/foot") %>